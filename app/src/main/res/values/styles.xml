<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BaseTextStyle">
        <item name="android:textColor">#ffffffff</item>
    </style>

    <style name="TemperatureStyle" parent="BaseTextStyle">
        <item name="android:textSize">@dimen/large_text_size</item>
        <item name="android:fontFamily">sans-serif-thin</item>
    </style>

    <style name="WeatherTextStyle" parent="BaseTextStyle">
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:ellipsize">none</item>
        <item name="android:maxLines">3</item>
    </style>

</resources>
